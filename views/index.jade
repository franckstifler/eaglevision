extends layout

block content
  include ./navigation.jade
  div.ligne
    span
  section#slider.text-center
    .container
      #mySlider.carousel.slide(data-ride="carousel")
        ol.carousel-indicators
          li(data-target="#mySlider" data-slide-to="0").active
          li(data-target="#mySlider" data-slide-to="1")
          li(data-target="#mySlider" data-slide-to="2")
        .carousel-inner
          .item.active.firstCarousel
            .carousel-caption
              h1 EAGLEVISION
              h2 Tous vos matériels informatiques disponibles! De vos tablettes, téléphones,ordinateurs, à vos clé internet...
              i.fa.fa-android.wow.wobble(data-wow-duration="5s")
              i.fa.fa-windows.wow.wobble(data-wow-duration="5s")
              i.fa.fa-apple.wow.wobble(data-wow-duration="5s")
          .item.firstCarousel
            .carousel-caption
              h1 EAGLEVISION
              h2 Nous installons, reparons et maintenons votre materiel informatique...
              a(href="#informatique")
                button(type="button").btn.btn-lg.btn-success En savoir plus
          .item.firstCarousel
            .carousel-caption
              h1 EAGLEVISION
              h2.fix Nous sommes constitués d'une équipe de professionnels dans l'audio-visuel, l'électronique, et en informatique, qui vous offrent une formation adaptée aux exigences de la societé...
              a(href="#electronique")
                button(type="button").btn.btn-lg.btn-success En savoir plus
  section.content
    .row#informatique
      .col-lg-2
        h2.title.wow.bounceInRight Informatique
      .col-lg-6
        .row
          div
            i.fa.fa-chevron-right.wow.rotateIn
            span.talk.wow.rotateIn Vente des difféents matériels informatiques: téléphones, tablettes, ordinateurs portable... 
          br
          br
        .row
          div
            i.fa.fa-chevron-right.wow.rotateIn
            span.talk Nous réparons votre matériel informatique, tout en prévoyant les pannes ultérieures, car vous comptez pour nous. Grâce à notre laboratoire bien équipé nous vous offrons des services de qualité. 
          br
          br
        .row
          div
            i.fa.fa-chevron-right.wow.rotateIn
            span.talk Nous formons en divers domaines informatiques tels que la Bureautique, l'Infographie, les réseaux, l'audiovisuel et la programmation... Grâce a nos experts qui vous offrent une formation adaptée aux exigences de la société.
      .col-lg-4
        #pub.carousel.slide(data-ride="carousel")
          //carousel items
          .carousel-inner
            .item.active
              img(src="images/bg4.jpg" alt="first slide" style="width:100%")
            .item
              img(src="images/bg2.jpg" alt="second slide" style="width:100%")
            .item
              img(src="images/bg3.jpg" alt="second slide" style="width:100%")
          a.left.carousel-control(href="#pub" data-slide="prev")
            span.icon-prev(aria-hidden="true")
          a.left.carousel-control(href="#pub2" data-slide="prev")
            span.sr-only Previous
          a.right.carousel-control(href="#pub" role="button" data-slide="next")
            span.icon-next(aria-hidden="true")
            span.sr-only Next
    div.ligne
      span
    .row#electronique
      .col-lg-2
        h2.title.wow.bounceInUp Electronique
      .col-lg-6
        .row
          div
            i.fa.fa-chevron-right.wow.rotateIn
            span.talk Nous diposons d'une large gamme de matériels électronique: écrans plasma, tous les lecteurs DVD, CD, fer à repasser, radio...  
          br
          br
        .row
          div
            i.fa.fa-chevron-right.wow.rotateIn
            span.talk Nous réparons votre matériel életronique tels que vos écrans plasma, lecteurs DVD fer à repasser... Nous prenons soin de vos donner également les précautions pour les entretenir.
          br
          br
        .row
          div
            i.fa.fa-chevron-right.wow.rotateIn
            span.talk Nous formons en maintenance, réparation du materiel electronique: telephones portables, televiseurs... Grâce à notre laboratoire bien équipé nous vous offrons des services de qualité.
      .col-lg-4
        #pub2.carousel.slide(data-ride="carousel")
          //carousel items
          .carousel-inner
            .item.active
              img(src="images/bg1.jpg" alt="first slide" style="width:100%")
            .item
              img(src="images/bg5.jpg" alt="second slide" style="width:100%")
            .item
              img(src="images/bg.jpg" alt="second slide" style="width:100%")
          a.left.carousel-control(href="#pub2" data-slide="prev")
            span.icon-prev(aria-hidden="true")
            span.sr-only Previous
          a.right.carousel-control(href="#pub2" role="button" data-slide="next")
            span.icon-next(aria-hidden="true")
            span.sr-only Next

  include ./footer.jade